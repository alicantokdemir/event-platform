{
  "name": "cloud-native-event-platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "build": "npm -ws run build",
    "dev": "npm -ws run dev",
    "seed": "npm --workspace tools-seed run seed",
    "seed:delete": "npm --workspace tools-seed run seed:delete",
    "lint": "eslint \"apps/**/src/**/*.ts\" \"packages/**/src/**/*.ts\" \"tools/**/src/**/*.ts\"",
    "lint:fix": "eslint \"apps/**/src/**/*.ts\" \"packages/**/src/**/*.ts\" \"tools/**/src/**/*.ts\" --fix",
    "test": "npm -ws run test",
    "test:unit": "npm -ws run test:unit",
    "test:integration": "npm -ws run test:integration",
    "test:e2e": "npm -ws run test:e2e"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "typescript": "^5.6.3"
  }
}
